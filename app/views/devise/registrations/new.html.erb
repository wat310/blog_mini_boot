<div class="container">
<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :nickname, 'ニックネーム' %> <em>(6 文字が最大です)</em><br />
    <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワードの確認' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "ユーザー登録", class: 'btn btn-info' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

