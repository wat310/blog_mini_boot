<div class ="container">

  <h1 class="text-center"><%= @tweet.user.nickname%>の<%= @tweet.created_at.strftime("%Y年%m月%d日") %>の投稿</h1>
    <%# <div class="col-md-12 margin-top-20per" > %>
    <div class="tweet_show_box" >
     <%= simple_format(@tweet.text) %>
    </div>

<% if user_signed_in? && current_user.id == @tweet.user_id %>
 <ul class="more_list"> 
    <li>
    <%= link_to '編集', "/tweets/#{@tweet.id}/edit", method: :get, class: 'btn btn-primary' %>
    </li> 
    <li>
      <%= link_to '削除', "/tweets/#{@tweet.id}", method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger' %>
    </li>
  </ul>  
<% end %>


</div>