<div class="container" >
    <p><%= @nickname %>さんの投稿一覧</p>
    <% @tweets.each do |tweet| %>
      <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>

        <ul class="more_list">
         <li>
          <%= link_to '詳細', "/tweets/#{tweet.id}", method: :get, class: 'btn btn-warning' %>
         </li>
         <% if user_signed_in? && current_user.id == tweet.user_id %>    
         <li>
          <%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get, class: 'btn btn-primary' %>
         </li>
         <li>
          <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete, data: {confirm: '本当に削除してよろしいですか？'}, class: 'btn btn-danger'   %>
         </li>
         <% end %>
        </ul>
    <% end %>



    <%= paginate(@tweets) %>

    
  </div>